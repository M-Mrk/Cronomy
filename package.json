{
  "name": "cronomy",
  "version": "1.0.0",
  "description": "",
  "main": "main.py",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install": "python3 -m venv venv && . venv/bin/activate && pip install -r requirements.txt",
    "tailwind": "npx @tailwindcss/cli -i ./static/css/style-input.css -o ./static/css/style.css --watch",
    "start": ". venv/bin/activate && python3 main.py",
    "start:gunicorn": ". venv/bin/activate && gunicorn -c gunicorn.conf.py wsgi:app",
    "start:prod": ". venv/bin/activate && gunicorn -c gunicorn.conf.py wsgi:app",
    "dev": "concurrently \"npm run tailwind\" \"npm run start\"",
    "dev:gunicorn": "concurrently \"npm run tailwind\" \"npm run start:gunicorn\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M-Mrk/Cronomy.git"
  },
